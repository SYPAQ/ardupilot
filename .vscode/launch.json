    "version": "0.2.0",
    "configurations": [
        {
            "name": "GDB Cervello Boardtest",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build/cervello/bin/boardtest",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/opt/gcc-arm-none-eabi-6-2017-q2-update/bin/arm-none-eabi-gdb",
            // "logging": {"engineLogging": true, "trace": false, "traceResponse": false},
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true,
                },
            ],
            "miDebuggerServerAddress": "localhost:3333",
            "launchCompleteCommand": "exec-run",
            "targetArchitecture": "arm"
        }
    ]
}